<div class="dream-container">
    <div class="dream-content">
      <div class="dream-title">
        <%= @post.title %>
      </div>
      <div class="author">
        posted on <%= @post.created_at.strftime("%b %e, %Y") %>
        <br>by <%= @post.user.email %>
      </div>
  <div class="dream-content-full">
    <%= @post.body %>
    </div>

   <a href="/posts/<%=@post.id%>" class="load-comments">Show all comments</a>
   <a href="/posts/<%=@post.id%>" class="hide-comments">Hide all comments</a>

          <%= form_for(@post.comments.build, :url => post_comments_path(@post)) do |f|  %>
          <%= f.text_area :content %>

          <p><%= f.submit %></p>
         <% end %>

         <div class="comments-list" id="comments-list">
                </div>

   <% if current_user.email = @post.user.email %>
   <%= link_to 'Edit Post', edit_post_path(@post) %>
   <% else %>
   <% end %> |
   <%= link_to 'Back', posts_path %>
   </div>
   </div>
